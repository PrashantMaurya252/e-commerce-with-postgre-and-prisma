generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env(DATABASE_URL)
}

model User{
  id            String           @id @default(uuid())
  name          String?
  email         String           @unique
  password      String
  isAdmin       Boolean          @default(false)
  createdAt     Date             @default(now())
  orders        Order[]
  cart          Cart[]

}

model Product{
  id           String            @id @default(uuid())
  title        String
  description  String
  category     categoriesEnum
  files        File[]
  price        Int
  createdAt    Date              @default(now())
  orderItem    OrderItem[]
}

model File{
  id           String           @id @default(uuid())
  productId    String
  type         fileTypes
}


const categoriesEnum = ["","Electronics","Clothes","Kitchen Items"]
const fileTypes      = ["images","videos"]
