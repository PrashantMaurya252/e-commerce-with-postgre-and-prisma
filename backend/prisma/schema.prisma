generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum OtpType{
  EMAIL_VERIFICATION
  FORGOT_PASSWORD
}

enum Category{
  ELECTRONICS
  CLOTHES
  DAILY_USAGE
}

enum OrderStatus{
  PENDING
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

enum FileType{
  IMAGE
  VIDEO
  DOCUMENT
}

enum FilePurpose{
  PROFILE
  PRODUCT_MEDIA
  ORDER_RECEIPT
  OTHER
}

enum PaymentStatus{
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum DiscountType{
  PERCENT
  FLAT
}

model User{
  id                 String             @id @default(uuid())
  name               String            
  email              String              @unique
  password           String
  orders             Order[]
  cart               Cart?
  createdAt          DateTime                @default(now())
  isAdmin            Boolean            @default(false)
  files              File[]
  addresses           Address[]
  couponUsages                 CouponUsage[]
  refreshTokens      RefreshToken[]
  isVerified        Boolean             @default(false)
  
}

model Otp{
  id                  String                @id @default(uuid())
  email               String
  code                String
  type                OtpType
  isUsed              Boolean               @default(false)
  expiresAt           DateTime
  createdAt           DateTime              @default(now())

  @@index([email,type])
}

model Product{
  id                  String            @id @default(uuid())
  title               String
  description         String
  price               Int
  offerPrice          Int?
  isOfferActive       Boolean            @default(false)
  category            Category
  files               File[]
  createdAt           DateTime               @default(now())
  orderItems          OrderItem[]
  itemLeft            Int                    @default(0)
  cartItems           CartItem[]
  disabled            Boolean                @default(false)
  @@index([title])

}


model Address{
  id                  String             @id @default(uuid())
  line1               String
  line2               String?
  landmark            String?
  phoneNumber1        String     
  phoneNumber2        String?
  pincode             Int
  city                String
  userId              String
  user                User              @relation(fields:[userId],references:[id],onDelete:Cascade)
  orders              Order[]      
}

model Order{
  id                  String              @id @default(uuid())
  userId              String?
  total               Int
  subTotal            Int
  discountAmount      Int                 @default(0)
  couponId            String?
  couponCode          String?
  createdAt           DateTime             @default(now())
  items               OrderItem[]
  user                User?                @relation(fields:[userId],references:[id],onDelete:SetNull)
  status              OrderStatus          @default(PENDING)
  files               File[]
  addressId           String?
  address             Address?             @relation(fields:[addressId],references:[id],onDelete:SetNull)
  payment             Payment?
}

model OrderItem{
  id                  String               @id @default(uuid())
  productId           String
  orderId             String
  quantity            Int 
  order               Order                @relation(fields:[orderId],references:[id],onDelete:Cascade)
  product             Product              @relation(fields:[productId],references:[id],onDelete:Restrict)
}

model File{
  id                  String              @id @default(uuid())
  type                FileType
  url                 String
  filePurpose         FilePurpose         @default(OTHER)
  publicId            String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  userId              String?
  productId           String?
  orderId             String?
  product             Product?             @relation(fields:[productId],references:[id],onDelete:Cascade)
  user                User?                @relation(fields:[userId],references:[id],onDelete:SetNull)
  order               Order?               @relation(fields:[orderId],references:[id],onDelete:Cascade)
}

model Payment {
  id                     String        @id @default(uuid())
  orderId                String        @unique
  amount                 Int           // amount in smallest currency unit
  currency               String        @default("INR")
  status                 PaymentStatus @default(PENDING)
  stripePaymentIntentId  String?       // payment_intent id
  stripeChargeId         String?       // charge id (if applicable)
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  order                  Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Cart{
  id                     String                  @id @default(uuid())
  items                  CartItem[]
  total                  Int                       @default(0)
  userId                 String                    @unique
  user                   User                      @relation(fields:[userId], references:[id],onDelete:Cascade)
  locked                 Boolean                   @default(false)
  lockedAt               DateTime?                 
  updatedAt              DateTime                      @updatedAt
}


model CartItem {
  id         String   @id @default(uuid())
  cartId     String
  productId  String
  quantity   Int      @default(0)
  createdAt  DateTime @default(now())

  cart       Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@unique([cartId, productId]) // one cart record per user-product pair
}

model Coupon{
  id                     String                   @id @default(uuid())
  code                   String                   @unique
  discountType           DiscountType
  discountValue          Int                       @default(0)
  maxDiscount            Int?
  usageLimit             Int?
  minCartValue           Int                      @default(0)
  expiresAt              DateTime
  isActive               Boolean                  @default(true)
  createdAt              DateTime                 @default(now())
  couponUsages                 CouponUsage[]
}

model CouponUsage{
  id                      String                  @id @default(uuid())
  userId                  String
  couponId                String
  usedAt                  DateTime                @default(now())
  user                    User                    @relation(fields:[userId],references:[id],onDelete:Cascade)
  coupon                  Coupon                  @relation(fields:[couponId],references:[id],onDelete:Cascade)
  @@unique([couponId,userId])
}

model RefreshToken{
  id                      String                  @id @default(uuid())
  token                   String                  @unique
  userId                  String
  user                    User                    @relation(fields:[userId],references:[id],onDelete:Cascade)
  expiresAt               DateTime                
  createdAt               DateTime                @default(now())
 
}