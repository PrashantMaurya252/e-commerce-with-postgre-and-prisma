{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["."],
  "exclude": ["dist", "node_modules", "generated/prisma/browser.ts"]
}
